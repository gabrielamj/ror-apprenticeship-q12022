<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Poketypes</h1>

  <div class="row p-4">
    <div class="col-9"></div>
    <div class="col-3">
      <%= link_to '+ New Poketype', new_poketype_path, class:"btn btn-success" %>
  </div>

  <table class="table table-striped table-hover"> 
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @poketypes.each do |poketype| %>
        <tr>
          <td><%= poketype.name.capitalize %></td>
          <!-- <td><%= link_to 'Show', poketype, class:"btn btn-primary" %></td> -->
          <td><%= link_to 'Edit', edit_poketype_path(poketype), class:"btn btn-warning" %></td>
          <td><%= link_to 'Destroy', poketype, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>

